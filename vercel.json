{
  "version": 2,
  "builds": [
    { "src": "main.py", "use": "@vercel/python" },
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "main.js", "use": "@vercel/static" },
    { "src": "style.css", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/analyze", "dest": "/main.py" },
    { "src": "/api/analyze_text", "dest": "/main.py" },
    { "src": "/api/analyze_text_batch", "dest": "/main.py" },
    { "src": "/api/macro_f1", "dest": "/main.py" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
